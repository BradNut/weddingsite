{
  "name": "weddingsite",
  "version": "0.2.0",
  "description": "Wedding Website",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "test": "NODE_ENV=test jest --watch",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.2",
    "babel-core": "^6.26.3",
    "babel-plugin-styled-components": "^2.0.7",
    "bcryptjs": "^3.0.3",
    "cloudinary-build-url": "^0.2.4",
    "dotenv": "^17.2.3",
    "escape-html": "^1.0.3",
    "html-escaper": "^3.0.3",
    "iron-session": "^8.0.4",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.2",
    "next": "^16.1.1",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "plaiceholder": "^3.0.0",
    "prop-types": "^15.8.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "sharp": "^0.34.5",
    "styled-components": "^6.1.19",
    "swr": "^2.3.8",
    "waait": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@biomejs/biome": "^2.3.10",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/escape-html": "^1.0.4",
    "@types/html-escaper": "^3.0.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/nprogress": "^0.2.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./.jest/setEnvVars.js"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(plaiceholder|sharp)/)"
    ]
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "presets": [
      [
        "next/babel",
        {
          "preset-react": {
            "runtime": "automatic"
          }
        }
      ]
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-react": {
                "runtime": "automatic"
              },
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  }
}
